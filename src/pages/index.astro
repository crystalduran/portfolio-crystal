---
import About from "../components/About.astro";
import Contact from "../components/Contact.astro";
import Hero from "../components/Hero.astro";
import NavBar from "../components/NavBar.astro";
import Projects from "../components/Projects.astro";
import Skills from "../components/Skills.astro";
import Footer from "../components/Footer.astro";
---

<style>
	html {
		scroll-behavior: smooth;
		scroll-padding-top: 90px;
	}
</style>

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Indie+Flower&family=Lexend:wght@100..900&display=swap"
			rel="stylesheet"
		/>
		<link rel="stylesheet" href="" />
		<meta name="viewport" content="width=device-width" />
		<meta
			name="description"
			content="Crystal Duran's portfolio showcasing software development projects, skills, and contact information. Built with Astro, TypeScript, and Tailwind CSS."
		/>
		<title>Crystal Dur√°n</title>
	</head>
	<body class="bg-[#FEFFFC] dark:bg-[#121214] pt-[70px] md:pt-[90px]">
		<NavBar />
		<main id="main-content">
			<Hero />
			<About />
			<Projects />
			<div
				class="flex flex-col-reverse lg:flex-row lg:space-x-3 mx-4 md:mx-0 lg:mx-14 md:my-4"
			>
				<Contact />
				<Skills />
			</div>
		</main>
		<Footer />
	</body>
</html>
