---
import contact from "../data/contact.json";
import GitHub from "../assets/GitHub.png";
import LinkedIn from "../assets/LinkedIn.png";
import Devto from "../assets/Dev.png";
import Instagram from "../assets/instagram-svgrepo-com.svg";
